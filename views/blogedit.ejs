                                    <div class="col-lg-3">
                                        <label for=""><strong>Tiêu Đề Bài Viết</strong></label>
                                    </div>
                                    <div class="col-lg-9">
                                        <input type="text" name="title" value="<%=dataedit.title%>" id="title" class="form-control" placeholder="Jhon Doe" aria-describedby="helpId" required>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-lg-3">
                                        <label for=""><strong>Mô Tả</strong></label>
                                    </div>
                                    <div class="col-lg-9">
                                        <textarea class="form-control" name="mota" rows="3" placeholder="Mô Tả" required>
