                                    <div class="col-lg-3">
                                        <label for=""><strong>Nội Dung</strong></label>
                                    </div>
                                    <div class="col-lg-9">
                                        <textarea class="form-control" name="content" id="editor1" rows="3" placeholder="Mô Tả" required>
                                                    <%=dataedit.content%>
                                                </textarea>
                                    </div>
                                </div>


